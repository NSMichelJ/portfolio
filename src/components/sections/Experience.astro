---
  import { Icon } from "astro-icon/components";
  import LinkButton from "../LinkButton.astro";
  import SectionContainer from "../SectionContainer.astro";

  const EXPERIENCES = [{
    title: 'Desarrollador Web en la Alcaldía del Municipio Montes',
    date: {
      date: '2024-30-01',
      str: 'Enero, 2024 - Actualidad'
    },
    description: 'Desde enero de 2024, formo parte del equipo de informática de la Alcaldía del Municipio Montes, desempeñándome como desarrollador web. Mi rol principal ha sido el diseño, desarrollo e implementación de un sistema de nómina para optimizar los procesos de gestión de pagos en la institución.',
    href: '/projects/project-4'
  },
  {
    title: 'Creación de una aplicación web para la gestión de empleados en RRHH.',
    date: {
      date: '2023-06-01',
      str: 'Junio, 2023'
    },
    description: 'Durante mi formación profesional en la universidad, desarrolle una aplicación web para la gestión de los empleados adscritos al departamento de recursos humanos del Hospital I Dr. Luis Daniel Beauperthuy de Cumanacoa, municipio Montes del estado Sucre, Venezuela.',
    href: '/projects/project-1'
  }]

---

<SectionContainer title="Experiencia" id="experience">
  <Icon slot="icon" name="mdi:briefcase" />
  <ol class="relative border-s border-indigo-300 dark:border-mariner-700">
    {EXPERIENCES.map(({title, date, description, href}) => (
    <li class="mb-10 ms-4">
      <div class="absolute w-3 h-3 bg-mariner-700 rounded-full mt-1.5 -start-1.5 border border-white">
      </div>
      <time datetime={date.date}
        class="mb-1 text-sm font-normal leading-none text-gray-600 dark:text-gray-400">{date.str}</time>
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{title}</h3>
      <p class="mb-4 text-base font-normal text-gray-700 dark:text-gray-400">{description}</p>
      {href && (
      <LinkButton href={href} target="_blank">
        Leer más
        <Icon name="mdi:arrow-right-bold-circle" />
      </LinkButton>
      )}
    </li>
    ))}
  </ol>
</SectionContainer>