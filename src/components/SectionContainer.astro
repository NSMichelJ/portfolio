---
  interface Props {
    title: string;
    id: string;
  }

  const { title } = Astro.props;
---

<section {...Astro.props}>
  <div class="mx-auto max-w-6xl px-4 py-14 px-6 lg:px-8">
    <div class="mb-4">
      <div class="mb-6 max-w-3xl text-center sm:text-center md:mx-auto md:mb-12">
        <h2
          class="flex justify-center items-center gap-1 text-gray-900 text-3xl font-bold tracking-tight sm:text-4xl dark:text-gray-100">
          <slot name="icon" />
          {title}
        </h2>
      </div>
    </div>
    <slot />
  </div>
</section>